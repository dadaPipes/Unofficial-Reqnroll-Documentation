{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../Reqnroll/Reqnroll", "files": [ "**/*.csproj" ], "exclude": [ "**/bin/**", "**/obj/**", "**/Analytics/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Unofficial Reqnroll Documentation",
      "_appTitle": "Unofficial Reqnroll Documentation",
      "_appLogoPath": "images/reqnroll-icon.png",
      "_enableSearch": true,
      "pdf": false
    }
  }
}